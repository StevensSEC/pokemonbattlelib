	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch playground",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/playground/playground.go"
		},
		{
			"name": "Launch test package",
			"type": "go",
			"request": "launch",
			"mode": "test",
			"program": "${workspaceFolder}"
		},
		{
			"name": "Run benchmarks",
			"type": "go",
			"request": "launch",
			"mode": "test",
			"program": "${workspaceFolder}",
			"args": ["-test.bench=."]
		},
		{
			"name": "Debug code generator",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/data/gen.go",
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Debug HTTP API",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/http",
			"cwd": "${workspaceFolder}"
		}
	]
}
