{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Tests with Coverage",
			"type": "shell",
			"command": "ginkgo -r --coverpkg=github.com/StevensSEC/pokemonbattlelib --coverprofile=coverage.out --outputdir=. && go tool cover -html=coverage.out",
			"windows": {
				"command": "ginkgo -r --coverpkg=github.com/StevensSEC/pokemonbattlelib --coverprofile=\"coverage.out\" --outputdir=\".\" & go tool cover -html=\"coverage.out\""
			},
			"problemMatcher": [
				"$go"
			]
		}
	]
}